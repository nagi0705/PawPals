<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "つのエラーにより、この投稿の保存が禁止されました：") %></h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message.gsub('Title ', '').gsub('Content ', '') %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1 class="center-text">投稿の編集</h1>

<div class="post-form">
  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content, "コンテンツ" %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :image, "画像" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="form-group center-text">
      <%= form.submit "更新する", class: "btn-primary" %>
    </div>
  <% end %>

  <div class="center-text">
    <%= link_to '戻る', posts_path %>
  </div>
</div>