<h1>新しい投稿</h1>

<%= form_with model: @post, local: true, html: { multipart: true } do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "つのエラーにより、この投稿の保存が禁止されました：") %></h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message.gsub('Title ', '').gsub('Content ', '') %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, "コンテンツ" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :image, "画像" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "投稿する" %>
  </div>
<% end %>

<%= link_to '戻る', posts_path %>
