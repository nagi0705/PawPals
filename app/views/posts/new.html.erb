<h1 class="center-text">新しい投稿</h1>

<%= form_with model: @post, local: true, html: { multipart: true, class: "new-post-form center-form" } do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "つのエラーにより、この投稿の保存が禁止されました：") %></h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message.gsub('Title ', '').gsub('Content ', '') %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, "コメント" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image, "画像" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="center-button">
    <%= form.submit "投稿する", class: "btn-primary" %>
  </div>
<% end %>

<div class="center-button">
  <%= link_to '戻る', posts_path, class: "btn btn-primary" %>
</div>