<h1>投稿一覧</h1>

<%= link_to '新しい投稿', new_post_path %>

<% @posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, post %></h2>
    <p><%= post.content %></p>
    <% if post.image.present? %>
      <%= image_tag post.image.url %>
    <% end %>
    <p><%= link_to '編集', edit_post_path(post) %> | <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' } %></p>
  </div>
<% end %>
