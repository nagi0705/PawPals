<h1>投稿一覧</h1>

<%= form_with(url: posts_path, method: :get, local: true) do %>
  <%= label_tag :search, "検索" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "検索", name: nil %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post %></h2>
    <p><%= truncate(post.content, length: 100) %></p>
  </div>
<% end %>
