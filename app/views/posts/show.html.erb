<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<% if @post.image.present? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @post.image.url, class: "post-image" %>
  </p>
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
