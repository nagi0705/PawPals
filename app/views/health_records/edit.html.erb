<h1>健康記録の編集</h1>

<%= form_with model: [@pet, @health_record], local: true do |f| %>
  <div>
    <%= f.label :walked, "散歩したか" %><br>
    <%= f.check_box :walked %>
  </div>
  
  <div>
    <%= f.label :morning_meal, "朝ごはんを食べたか" %><br>
    <%= f.check_box :morning_meal %>
  </div>
  
  <div>
    <%= f.label :evening_meal, "夕ごはんを食べたか" %><br>
    <%= f.check_box :evening_meal %>
  </div>
  
  <div>
    <%= f.label :note, "メモ" %><br>
    <%= f.text_area :note %>
  </div>

  <div>
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', pet_health_record_path(@pet, @health_record), class: "btn btn-primary" %>
