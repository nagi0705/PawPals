<h1>グループ一覧</h1>
<%= link_to '新しいグループ', new_group_path, class: 'btn btn-primary' %>

<div class="search-container">
  <%= form_with(url: search_groups_path, method: :get, local: true) do %>
    <div class="form-group">
      <%= label_tag :query, "検索" %>
      <%= text_field_tag :query, params[:query], class: "form-control search-input" %>
      <%= submit_tag "検索", class: "btn-primary search-btn" %>
    </div>
  <% end %>
</div>

<% @groups.each do |group| %>
  <%= link_to group.name, group, class: 'group-link' %>
<% end %>
