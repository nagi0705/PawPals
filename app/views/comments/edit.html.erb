<h1>コメント編集</h1>

<%= form_with(model: [ @post, @comment ], local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit "コメントを更新", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', @post, class: 'btn btn-primary' %>