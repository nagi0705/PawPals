<h1><%= @user.username %>のプロフィール</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>登録日時:</strong>
  <%= @user.created_at %>
</p>

<h2>投稿一覧</h2>
<ul>
  <% @user.posts.each do |post| %>
    <li>
      <h3><%= link_to post.title, post_path(post) %></h3>
      <p><%= post.content %></p>
    </li>
  <% end %>
</ul>

<p>
  <%= link_to 'Back', users_path %>
</p>
