<h1>ペット情報</h1>

<p>
  <strong>名前:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>種類:</strong>
  <%= @pet.species %>
</p>

<p>
  <strong>年齢:</strong>
  <%= @pet.age %>
</p>

<p>
  <strong>カラー:</strong>
  <%= @pet.kind %>
</p>

<p>
  <strong>画像:</strong>
  <% if @pet.image.attached? %>
    <%= image_tag @pet.image, class: "pet-image" %>
  <% else %>
    画像がありません
  <% end %>
</p>

<% if current_user == @pet.user || current_user.admin? %>
  <%= link_to '編集', edit_pet_path(@pet), class: 'btn btn-primary' %> |
  <%= link_to '削除', @pet, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-primary' %> |
<% end %>
<%= link_to '戻る', pets_path, class: 'btn btn-primary' %>