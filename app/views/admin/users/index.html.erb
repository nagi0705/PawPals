<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-primary' %> |
          <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
